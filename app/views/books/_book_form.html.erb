<%= form_with(model: @book) do |form| %>
 

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>

 <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle, id: :book_subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :book_body %>
  </div>
  <ul>
    <%= form.fields_for :technologies do |techn_form| %>
    <li>
      <%= techn_form.label :name %>
      <%= techn_form.text_field :name %>
    </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>