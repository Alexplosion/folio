
  <%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, :title => "Alexandre Portfolio") %>
    <% end %>   
  <% end %>
    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, id: :book_title,class:"form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_area :subtitle, id: :book_subtitle,class:"form-control" %>
        </div>

        <div class="form-group">
          <label class="btn btn-primary">
            Uploader l'image pricipale <%= form.file_field :main_img, id: :book_main_img, style: "display:none;" %>
          </label>
        </div>

        <div class="form-group">
          <label class="btn btn-primary">
            Uploader la miniature <%= form.file_field :thumb_img, id: :book_thumb_img, style: "display:none;" %>
          </label>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, id: :book_body ,class:"form-control", rows: 15%>
        </div>
        
      </div>
    </div> 
      <div class="col-md-12">
          <h2> Technologies utilis√©es </h2>
          <div class="form-group">
            <%= form.fields_for :technologies do |techn_form| %>
              <%= render  "technology_fields", f: techn_form %>
            <% end %>
          </div>
          <div class='links'>
            <%= link_to_add_association 'ajouter une technologie', form, :technologies %>
           </div>

          <div class="form-group">
            <%= form.submit "Publier", class:"btn btn-primary", remote: false%>
          </div>
      </div>
    <% end %>
